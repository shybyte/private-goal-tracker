<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:marco.stahl.goaltracker.client.utilwidgets">
	<ui:style>
		.buttonColumn {
			text-align: right;
			width: 40%;
			white-space: nowrap;
		}
		
		@external gwt-Button;
		.buttonColumn .gwt-Button {
			margin-left: 3px;
		}
		
		.goalTitleColumn {
			text-align: left;
		}
		
		.goalValuesColumn {
			text-align: right;
		}
	</ui:style>
	<my:TableRow>
		<my:Cell styleName="{style.goalTitleColumn}" ui:field="title"
			text="?" />
		<my:Cell styleName="{style.goalValuesColumn}">
			<g:HTML>
				<span ui:field="value">1</span>
				/
				<span ui:field="targetValue">7</span>
			</g:HTML>
		</my:Cell>
		<my:Cell styleName="{style.buttonColumn}">
			<g:Button ui:field="plusButton" text="+" />
			<g:Button ui:field="plusPlusButton" text="++" />
			<g:Button ui:field="editButton" text="Edit" />
		</my:Cell>
	</my:TableRow>
</ui:UiBinder> 